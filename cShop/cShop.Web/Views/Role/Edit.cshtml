@model RoleUpdateRequest
@section Title{
    Quản lý quyền
}

<div class="container-fluid">
    <div class="row">
        <form asp-action="Edit" asp-controller="Role" class="w-100">
            <div class="col-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Cập nhật quyền</h5>
                        @if (!string.IsNullOrEmpty(ViewBag.message))
                        {
                            <div class="alert alert-@(ViewBag.isSuccess?"success":"danger") alert-dismissible fade show alert-timeout" id="msgAlert" role="alert">
                                <strong>@(ViewBag.isSuccess?"S":"Uns")uccessfully!</strong> @ViewBag.message
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <input type="hidden" asp-for="Id" />
                        <div class="form-group row">
                            <label class="col-md-3" asp-for="Name"></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" asp-for="Name">
                                <span asp-validation-for="Name" class="text text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3" asp-for="Description"></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" asp-for="Description">
                                <span asp-validation-for="Description" class="text text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Script{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>
}